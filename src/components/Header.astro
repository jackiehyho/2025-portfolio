---
import Logo from './Logo.astro'
import Navigation from './Navigation.astro'
---
<header id="header">
    <Logo /><Navigation />
</header>
<style lang="scss">


  #header {
    display: flex;
    align-items: center;
    position: sticky;
    transition: all 1s ease-in-out;
    z-index: 10;
    padding: 1rem 2rem;
    min-height: var(--header-height);
  }

  @media only screen and (min-width: 768px) {
    #header {
        position: initial;
        margin: auto;
    }
}


</style>
