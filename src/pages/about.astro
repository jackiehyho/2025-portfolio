---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="About Jackie Ho"
  description="A digital product designer from Vancouver, BC"
>
  <main slot="main">
    <section class="section about-intro-section">
      <div class="row">
        <div class="about-intro-text-container">
          <h1 class="hero-header">Hi, my name is<br /> Jackie Ho</h1>
        </div>
        <div class="about-intro-text-container">
          <p class="hero-paragraph">
            I love bridging gaps between design, marketing, and web development,
            I excel at untangling complex problems and creating cohesive digital
            products and solutions with my diverse skillsets and can-do
            attitude.
          </p>
        </div>
      </div>
    </section>
    <section class="section about-container">
      <div class="row">
        <div class="half-container">
          <img src="src/images/Mountain-Photo.jpg" />
        </div>
        <div class="half-container">
          <div class="half-height">
            <img src="src/images/Underwater.jpg" />
          </div>
          <div class="half-height">
            <img src="src/images/berlin.jpg" />
          </div>
        </div>
      </div>
    </section>
    <div class="row">
      <div class="third-container">
        <div class="quick-facts"><h2>Quick Facts</h2></div>
      </div>
      <div class="two-third-container">
          <ul class="list-of-facts">
            <li class="quick-fact">
              <img class="icons" src="src/images/storytelling.png" /><p>
                Ex-YouTuber that love storytelling and telling other people's
                stories.
              </p>
            </li>
            <li class="quick-fact">
              <img class="icons" src="src/images/mic.png" /><p>
                Professional shower singing and karaoke junkie.
              </p>
            </li>
            <li class="quick-fact">
              <img class="icons" src="src/images/community.png" /><p>
                Love building communities and inspiring others!
              </p>
            </li>
            <li class="quick-fact">
              <img class="icons" src="src/images/food.png" /><p>
                Alternative timeline chef with refined tastebuds searching for
                new flavours!
              </p>
            </li>
            <li class="quick-fact">
              <img class="icons" src="src/images/hobbies.png" /><p>
                Serial hobbyist embracing my curiousity about everything and
                how things work.
              </p>
            </li>
          </ul>
      </div>
    </div>
    <section id="carousel-section"class='container'>
        <div class='carousel-gallery'>
          <button id="carousel-button-left" onclick="this.disabled=true;"class='button-left arrow'>&leftarrow;</button>
          <div class='carousel-image-list'>
  
                <div class='carousel-image-item'>
                  <div class='carousel-content'>
                    <div class='image-container'>
                      <img class='carousel-image' src="/src/images/tech-hive.jpg" />
                      <p class="carousel-caption"><small>Tech Hive Team</small></p>
                    </div>
                  </div>
                </div>
  
  
                <div class='carousel-image-item'>
                  <div class='carousel-content'>
                    <div class='image-container'>
                      <img class='carousel-image' src="/src/images/fraserway.jpg" />
                      <p class="carousel-caption"><small>Fraserway RV Team</small></p>
                    </div>
                  </div>
                </div>
  
  
                <div class='carousel-image-item'>
                  <div class='carousel-content'>
                    <div class='image-container'>
                      <img class='carousel-image' src="/src/images/wong-fu.jpg" />
                      <p class="carousel-caption"><small>Hypelife x Wong Fu Production</small></p>
                    </div>
                  </div>
                </div>
                <div class='carousel-image-item'>
                  <div class='carousel-content'>
                    <div class='image-container'>
                      <img class='carousel-image' src="/src/images/burn.jpg" />
                      <p class="carousel-caption"><small>Hypelife Music Video Team</small></p>
                    </div>
                  </div>
                </div>
  
  
                <div class='carousel-image-item'>
                  <div class='carousel-content'>
                    <div class='image-container'>
                      <img class='carousel-image' src="/src/images/memorme-team.jpg" />
                      <p class="carousel-caption"><small>Memorme Team</small></p>
                    </div>
                  </div>
                </div>
  
  
                <div class='carousel-image-item'>
                  <div class='carousel-content'>
                    <div class='image-container'>
                      <img class='carousel-image' src="/src/images/design.jpg" />
                      <p class="carousel-caption"><small>Digital Experience Revamp Team</small></p>
                    </div>
                  </div>
                </div>
  
                <div class='carousel-image-item'>
                  <div class='carousel-content'>
                    <div class='image-container'>
                      <img class='carousel-image' src="/src/images/dragonboating.jpg" />
                      <p class="carousel-caption"><small>Dragonboating Team</small></p>
                    </div>
                  </div>
                </div>
  
  
          </div>
          <button id="carousel-button-right" onclick="this.disabled=true;" class='button-right arrow'>&rightarrow;</button>
        </div>
      </section>

  </main>
 
</Layout>

<style lang="scss">
  .icons {
    max-width: 32px;
    max-height: 32px;
  }
  .hero-paragraph {
    font-size: 1.5rem;
    font-weight: 300;
    line-height: 1.5;
    padding-left: 2rem;
    margin-left: auto;
  }
  .about-intro-text-container {
    display: inline-block;
  }
  .quick-fact {
    display: flex;
    text-align: left;
    justify-content: start;
    align-items: center;

    p {
      padding-left: 1rem;
    }
  }
  .about-intro-section {
    padding: 6rem 0;
    display: flex;
    gap: 2rem;
    margin: auto;
  }
  .hero-header {
    text-align: center;
    font-size: 3rem;
    text-transform: uppercase;
    font-weight: 900;
  }
  .list-of-facts {
    padding: 0;
  }
  .quick-facts {
    text-align: left;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 300px;
    h2 {
      color: white;
      font-size: 4rem;
    }
    p {
      padding-left: 1rem;
    }
  }
  .content {
    width: 66.6%;
    height: 300px;
  }
  .about-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: auto;
    gap: 1rem;
  }
  .half-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    max-height: 600px;
    border-radius: 2rem;
    img {
      border-radius: 2rem;
    }
  }
  .third-container {
    height: 300px;
    width: 400px;
    background: #333;
    max-width: 400px;
    border-radius: 2rem;
  }
  .two-third-container {
    height: 300px;
    width: 800px;
    max-width: 66.6%;
  }
  .half-height {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    &:first-child {
    }
  }
  .image-1 {
    background-image: url("https://placehold.co/600x600/333/31343C");
  }
  .image-2 {
    background-image: url("https://placehold.co/600x600/333/FFFFFF");
    height: 292px;
    width: 300px;
  }
  .image-3 {
    background-image: url("https://placehold.co/600x600/333/FFFFFF");
    height: 292px;
    width: 300px;
  }
  #carousel-section {
    padding-top: 2rem;
    width: 100%;
  }
  .carousel-header {
    text-align: center;
    padding-bottom: 1rem;
    padding-top: 1rem;
  }
  .carousel-image-list {
    display: inline-flex;
    justify-content: center;
    align-items: center;
  }

  .carousel-gallery {
    position: relative;
    overflow-x: hidden;
    width: 100%;
  }

  .carousel-image-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 1rem;
  }

  .image-container {
    display: flex;
    flex-direction: column;
    justify-self: center;
    text-align: center;
    padding: 1rem;
    background-color: white;
  }
  .text-container {
    padding: 1rem;
    text-align: center;
  }

  .carousel-caption {
    margin: 0;
    padding: 0;
    font-size: 2rem;
  }

  .button-left {
    position: absolute;
    left: 0.5rem;
    top: 50%;
    z-index: 10;
  }
  .button-right {
    position: absolute;
    right: 0.5rem;
    top: 50%;
    z-index: 10;
  }

  .arrow {
    padding: 0;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: #fff;
    cursor: pointer;
    background: #333;
    width: 48px;
    font-size: 24px;
    display: flex;
    justify-content: center;
    align-items: center;
    border: none;
    border-radius: 50%;
    aspect-ratio: 1;
    -webkit-box-shadow: 5px 5px 5px -2px rgba(0, 0, 0, 0.5);
    -moz-box-shadow: 5px 5px 5px -2px rgba(0, 0, 0, 0.5);
    box-shadow: 5px 5px 5px -2px rgba(0, 0, 0, 0.5);
  }

  .sliding-transition {
    transition: all 0.5s ease-in-out;
  }
  .center-image img {
    transition: all 0.5s ease-in-out;
    &:hover {
      width: 800px;
      transition: all 0.5s ease-in-out;

      .carousel-caption {
        display: block;
      }
    }
  }

  .carousel-image {
    width: 100svw;
  }

  .carousel-caption {
    font-size: 1.25rem;
  }
  @media only screen and (min-width: 768px) {
    .hero-paragraph {
      font-size: 1.5rem;
      font-weight: 300;
      line-height: 1.5;
      padding: 0;
      margin: 0;
    }
    .about-intro-text-container {
      width: 100%;
      text-align: left;
    }
    #carousel-section {
      margin-top: 4rem;
      margin-bottom: 4rem;
    }
    .carousel-header {
      font-weight: 300;
      text-transform: uppercase;
      width: 100%;
      text-align: center;
      font-size: 3rem;
      padding-bottom: 2rem;
    }
    .carousel-image {
      padding-bottom: 1rem;
    }
    .text-container,
    .padding-caption {
      padding: 0;
      margin: 0;
    }

    .carousel-image {
      width: 600px;
      &:not(:first-child):not(:last-child) {
        &:hover {
          width: initial;
        }
      }
    }
    .hide-caption {
      display: none;
    }

    .image-container {
      width: 100%;
    }
    .carousel-image-list {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: row;
      gap: 1rem;
    }
    .carousel-content {
      padding: 0;
      margin: 0;
    }
    .carousel-gallery {
      position: relative;
      overflow-x: hidden;
    }

    .carousel-image-item {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .button-left {
      left: 0.25rem;
      transition: all 0.5s ease-in-out;

      &:hover {
        background: #02aab0;
        transition: all 0.5s ease-in-out;
      }
    }
    .button-right {
      right: 0.25rem;

      transition: all 0.5s ease-in-out;

      &:hover {
        background: #02aab0;
        transition: all 0.5s ease-in-out;
      }
    }
  }
</style>

<script>
  const portfolioImageList = document.querySelector(
    ".carousel-image-list"
  ) as HTMLElement;
  const leftArrow = document.querySelector("#carousel-button-left");
  const rightArrow = document.querySelector("#carousel-button-right");

  const portfolioImageItems = document.querySelectorAll(".carousel-image-item");
  const images = document.querySelectorAll(".carousel-image");

  const totalImages = Object.keys(portfolioImageItems).length;
  let centerIndex = Math.floor(totalImages / 2); // index 2

  let currentIndex = 0;
  let prevIndex: number;
  let imageWidth = images[currentIndex].getBoundingClientRect().width;

  portfolioImageItems[centerIndex].classList.add("center-image");
  // if(portfolioTextContent[centerIndex].classList.contains("hide-caption")){
  //   portfolioTextContent[centerIndex].classList.remove("hide-caption");
  //   }

  if (portfolioImageList) {
    leftArrow?.addEventListener("click", () => {
      portfolioImageItems[centerIndex].classList.remove("center-image");

      // portfolioTextContent[centerIndex].classList.add("hide-caption");
      prevIndex = currentIndex;
      currentIndex = (currentIndex - 1 + totalImages) % totalImages;
      centerIndex = (centerIndex - 1 + totalImages) % totalImages;

      portfolioImageList.style.transform = `translateX(-${imageWidth}px)`;
      portfolioImageList.insertBefore(
        portfolioImageItems[currentIndex],
        portfolioImageList.firstChild
      );

      setTimeout(() => {
        portfolioImageList.style.transform = "";
        portfolioImageList.classList.add("sliding-transition");
      }, 10);

      setTimeout(() => {
        portfolioImageList.classList.remove("sliding-transition");
        portfolioImageItems[centerIndex].classList.add("center-image");
        leftArrow.removeAttribute("disabled");
        // portfolioTextContent[centerIndex].classList.remove("hide-caption");
      }, 490);
    });

    rightArrow?.addEventListener("click", () => {
      portfolioImageItems[centerIndex].classList.remove("center-image");
      // portfolioTextContent[centerIndex].classList.add("hide-caption");
      prevIndex = currentIndex;
      portfolioImageList.classList.add("sliding-transition");
      currentIndex = (currentIndex + 1) % totalImages;
      centerIndex = (centerIndex + 1 + totalImages) % totalImages;

      portfolioImageList.style.transform = `translateX(-${imageWidth}px)`;

      setTimeout(() => {
        portfolioImageList.appendChild(portfolioImageItems[prevIndex]);
        portfolioImageList.classList.remove("sliding-transition");
        // portfolioTextContent[centerIndex].classList.remove("hide-caption");
        portfolioImageItems[centerIndex].classList.add("center-image");

        rightArrow.removeAttribute("disabled");
        portfolioImageList.style.transform = "";
      }, 500);
    });
  }
</script>
