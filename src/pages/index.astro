<style>
    .hero__title {
        font-size: 4rem;
        color: #333333;
        text-align: center;
    }
    .bento {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
    }

    .bento__links{
        border-radius: 1rem;


    }

    .bento__item {
        
        height: 300px;
        background-color: #ffffff;
        padding: 1rem;
        position:relative;
        display:flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .bento__one{
        grid-column: span 1;
    }

    .bento__two{
        grid-column: span 1;
    }

    .bento__three{
        grid-column: span 1;
    }
    .bento__four{
        grid-column: span 1;
    }
    .bento__five{
        grid-column: span 1;
    }
    .bento__six{
        grid-column: span 1;
    }
    .bento__seven{
        grid-column: span 1;
    }
    .portfolio__text {
        color: #ffffff;
        position:absolute;
        bottom: 1rem;
        left: 0;
        width: 100%;
        text-align:center;
    }

    .portfolio__tag {
        color: #ffffff;
        font-size: 0.75rem;
        position: absolute;
        padding: .25rem .5rem;
        background-color:  #02aab0;
        top: 1rem;
        left: 1rem;
        border-radius: 0.25rem;
        text-transform: uppercase;

    }

    .portfolio__image{
        height: 50%;
    }

    .animate-left{
        animation: animateLeft 3s ease forwards;
    }

    .animate-right{
        animation: animateRight 3s ease forwards;
    }

    @keyframes animateLeft {
        from {
            opacity: 0;
            transform: translateX(-25%);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @keyframes animateRight {
        from {
            opacity: 0;
            transform: translateX(25%);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @keyframes animateBottom {
        from {
            opacity: 0;
            transform: translateY(-25%);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }


    @media only screen and (min-width: 768px) {
        .bento {
        display: grid;
